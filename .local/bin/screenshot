#!/bin/bash

# This script was made by Lea
# Email: xealea@xedev.my.id
# Copyright Â© 2023 Lea <xealea@proton.me>

# Configuration
NOTIFY_ICON="/usr/share/icons/dunst/picture.png"
TIMER_ICON="/usr/share/icons/dunst/timer.png"

# Functions
notify() {
  dunstify -u low --replace=699 -i "$NOTIFY_ICON" "$1"
}

countdown() {
  for ((sec = $1; sec > 0; sec--)); do
    notify "Taking shot in: $sec"
    sleep 1
  done
}

convert_image() {
  convert "$1" \( +clone -background black -shadow 25x30+0+0 \) +swap -background '#bdc2be' -layers merge "$2"
}

take_screenshot() {
  maim -u -f png "$1"
}

create_directory() {
  if [[ ! -d "$1" ]]; then
    mkdir -p "$1" || { echo "Error creating directory: $1"; exit 1; }
  fi
}

# Main
timestamp=$(date +%Y-%m-%d-%H-%M-%S)
geometry=$(xrandr --current | awk '/current/ {print $8}')
pictures_dir="$(xdg-user-dir PICTURES)/Screenshots"
temp_file="${pictures_dir}/temp_${timestamp}.png"
file="${pictures_dir}/Screenshot_${timestamp}_${geometry}.png"

create_directory "$pictures_dir"

SCRIPT_NAME="screenshot"

options=("Screenshot --now" "Screenshot --in5" "Screenshot --in10" "Screenshot --win" "Screenshot --area")

selected_option=$(printf '%s\n' "${options[@]}" | dmenu -i -l 5 -p "$SCRIPT_NAME") || exit 1

# Function to use dmenu to prompt user to open in viewnior
viewnior_prompt() {
    open_in_viewnior=$(echo -e "Yes\nNo" | dmenu -p "Open in viewnior?")
    if [ "$open_in_viewnior" == "Yes" ]; then
        viewnior "$1"
    fi
}

case $selected_option in
    "Screenshot --now")
        take_screenshot "$temp_file" && convert_image "$temp_file" "$file" && notify "Copied to clipboard."
        viewnior_prompt "$file"
        ;;
    "Screenshot --in5")
        countdown 5 && take_screenshot "$temp_file" && convert_image "$temp_file" "$file"
        viewnior_prompt "$file" 
        ;;
    "Screenshot --in10")
        countdown 10 && take_screenshot "$temp_file" && convert_image "$temp_file" "$file"
        viewnior_prompt "$file"  
        ;;
    "Screenshot --win")
        take_screenshot "$temp_file" -i "$(xdotool getactivewindow)" && convert_image "$temp_file" "$file"
        viewnior_prompt "$file"  
        ;;
    "Screenshot --area")
        take_screenshot "$temp_file" -s -b 2 -c 0.35,0.55,0.85,0.25 && convert_image "$temp_file" "$file"
        viewnior_prompt "$file"  
        ;;
    *)
        exit 1
        ;;
esac

# Remove temp file
rm "$temp_file"

exit 0
