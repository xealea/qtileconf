#!/bin/bash

SCRIPT_NAME="powermenu"

options=("Poweroff" "Reboot" "Sleep")

selected_option=$(printf '%s\n' "${options[@]}" | dmenu -i -c -l 3 -p "$SCRIPT_NAME")

case $selected_option in
    "Poweroff")
        loginctl poweroff
        ;;
    "Reboot")
        loginctl reboot
        ;;
    "Sleep")
        loginctl suspend
        ;;
    *)
        echo "Invalid option"
        ;;
esac
